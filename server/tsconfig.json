{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules"]
}